@using Sitecore
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data
@using Sitecore.Data.Items
@using Sitecore.Data.Fields

@{
    //Extract the current Db
    Database currentDb = Sitecore.Context.Database;
    //Get the value of the Datasource
    string datasource = RenderingContext.Current.Rendering.DataSource;

    //Get the datasource item
    Item item = currentDb.GetItem("{92D49C0A-2DA2-4B51-B6A3-5183CC3A961A}");
}


<div class="transportaion_area">
    <div class="container">
        <div class="row">
            @foreach (Item childItem in item.GetChildren())
            {
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="single_transport">
                        <div class="icon">
                            @Html.Sitecore().Field("Feature Icon", childItem)
                        </div>
                        <h3>@Html.Sitecore().Field("Title", childItem)</h3>
                        <p>
                            @Html.Sitecore().Field("Description", childItem)
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>


    
</div>