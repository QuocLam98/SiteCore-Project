@using Sitecore
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data
@using Sitecore.Data.Items

@{
    //Extract the current Db
    Database currentDb = Sitecore.Context.Database;//Get the value of the Datasource
    string datasource = RenderingContext.Current.Rendering.DataSource;
    //Get the datasource item
    Item item = currentDb.GetItem("{E31322FA-3988-40EB-A2C2-7885F96A209E}");

}



<!-- slider_area_start -->
<div class="slider_area">
    <div class="single_slider  d-flex align-items-center slider_bg_1">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-8">
                    <div class="slider_text text-center justify-content-center">
                        <p>@Html.Sitecore().Field("Title", item)</p>
                        <h3>
                            @Html.Sitecore().Field("HeadLine", item)
                        </h3>
                        @Html.Sitecore().Field("Link", item,
                        new
                        {
                        @class = "boxed-btn3",
                        text = @Html.Sitecore().Field("Text", item)
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider_area_end -->